{
  "compilerOptions": {
    "outDir": "./es",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "declaration": false,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": false,
    "sourceMap": false,
    "skipDefaultLibCheck": false,
    "strict": false,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "tests",
    "bin",
    "lib",
    "node_modules"
  ]
}