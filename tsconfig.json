{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "declaration": true,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": false,
    "experimentalDecorators": false,
    "sourceMap": true,
    "skipDefaultLibCheck": false,
    "strict": false,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "tests",
    "bin",
    "lib",
    "node_modules"
  ]
}